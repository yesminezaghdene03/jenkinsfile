pipeline {
    agent any 

    stages {
        stage('Clone') {
            steps {
                // Cloner le dépôt Jenkinsfile
                git branch: 'main', 
                    url: 'https://github.com/yesminezaghdene03/jenkinsfile.git', 
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile' // Commande pour nettoyer et compiler
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarQube') { // Utiliser l'ID de votre serveur SonarQube configuré dans Jenkins
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=sonarQube1 // Remplacez par la clé de votre projet
                        -Dsonar.projectName=sonarQube1 // Remplacez par le nom de votre projet
                        -Dsonar.projectVersion=1.0 \
                        -Dsonar.login=behsy9-cynnyq-qaVguV
                    ''' // Assurez-vous que cette ligne se termine par ''' et non par '.
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying the project..."'
            }
        }
    }
}
