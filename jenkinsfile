pipeline {
    agent any 

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/yesminezaghdene03/jenkinsfile.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarQube') {
                    sh '''
                        mvn sonar:sonar \
                        -Dsonar.projectKey=sonarQube1 \
                        -Dsonar.projectName=sonarQube1 \
                        -Dsonar.projectVersion=1.0 \
                        -Dsonar.login=behsy9-cynnyq-qaVguV
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deploying the project..."'
            }
        }
    }
}
